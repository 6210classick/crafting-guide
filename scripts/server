# All rights reserved.
#

express = require 'express'
path    = require 'path'

########################################################################################################################

SITE_ROOT = './dist/'
DATA_ROOT = '../crafting-guide-data/'

CONTENT_TYPES = {
    '.css':  'text/css'
    '.html': 'text/html'
    '.js':   'text/javascript'
    '.json': 'application/json'
    '.map':  'application/json'
    '.png':  'image/png'
    '.ttf':  'application/octet-stream'
    '.scss': 'text/css'
}

########################################################################################################################

app = express()

serveIndex = (request, response)->
    console.log ">>> index.html (for #{request.path})"
    response.set 'Content-Type', 'text/html'
    response.sendFile 'index.html', root:SITE_ROOT

app.get '/crafting(/*)?', serveIndex
app.get '/item(/*)?', serveIndex
app.get '/mod(/*)?', serveIndex

app.get '/data/*', (request, response)->
    extension = path.extname(request.path)
    contentType = CONTENT_TYPES[extension]
    fullPath = request.path.replace '/data', ''
    console.log ">>> /data#{fullPath}"

    response.set 'Content-Type', contentType
    response.sendFile fullPath, root:DATA_ROOT

app.get '*', (request, response)->
    extension = path.extname(request.path)
    contentType = CONTENT_TYPES[extension]
    console.log ">>> #{request.path}"

    response.set 'Content-Type', contentType
    response.sendFile request.path, root:SITE_ROOT

server = app.listen 8000, ->
    console.log "listening at: #{server.address().address}:#{server.address().port}"
